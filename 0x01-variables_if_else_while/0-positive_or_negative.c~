#include <stdlib.h>
#include <time.h>
/**
*main:  entry point
*this program if the number is positive or nigitive or zero
*Return: always 0
*/
int main(void)
{
	int n;

	srand(time(0));
	n = rand() - RAND_MAX / 2;
	/* your code goes there */
	if (n < 0)
	printf("%i is negative", n);
	else if (n > 0)
	printf("%i is positive", n);
	else
	printf("%i is zero", n);

	return (0);
}
